@{
    ViewBag.Title = "User_Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: #ffffff;
        color: #0a0a0a;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        text-align: center;
    }

    h2 {
        color: #0078d7; /* Blue heading */
        font-size: 2rem;
        margin-top: 60px;
        margin-bottom: 30px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .button-container {
        text-align: center;
        margin-top: 30px;
    }

    .action-link {
        text-decoration: none;
        background-color: #0078d7; /* Blue button */
        color: #ffffff;
        padding: 12px 35px;
        border-radius: 8px;
        border: 2px solid transparent;
        font-weight: 500;
        transition: all 0.3s ease;
        display: inline-block;
    }

        .action-link:hover {
            background-color: #ffffff;
            color: #0078d7;
            border: 2px solid #0078d7;
            transform: scale(1.05);
        }
</style>

<h2>User Home</h2>

<div class="button-container">
    @Html.ActionLink("View Job", "Viewjob_pageload", "Viewjob", null, new { @class = "action-link" })
</div>
