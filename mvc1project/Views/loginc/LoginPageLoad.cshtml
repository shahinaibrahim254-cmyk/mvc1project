@model mvc1project.Models.logindb
@{
    ViewBag.Title = "LoginPageLoad";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: #ffffff;
        color: #0a0a0a;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    h2 {
        color: #0078d7; /* Blue heading */
        text-align: center;
        margin-top: 50px;
        font-size: 2rem;
        margin-bottom: 30px;
    }

    .login-container {
        width: 380px;
        margin: 0 auto;
        background-color: #f9f9f9;
        border: 1px solid #e0e0e0;
        border-radius: 10px;
        padding: 30px;
        box-shadow: 0 0 10px rgba(0, 120, 215, 0.2);
    }

    label {
        display: block;
        text-align: left;
        margin-bottom: 6px;
        color: #0078d7;
        font-weight: 500;
    }

    input[type="text"],
    input[type="password"] {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 6px;
        margin-bottom: 15px;
        font-size: 14px;
        transition: border-color 0.3s ease;
    }

        input[type="text"]:focus,
        input[type="password"]:focus {
            border-color: #0078d7;
            outline: none;
            box-shadow: 0 0 5px rgba(0, 120, 215, 0.3);
        }

    input[type="submit"] {
        background-color: #0078d7;
        color: white;
        border: none;
        border-radius: 6px;
        padding: 10px 25px;
        font-size: 16px;
        cursor: pointer;
        transition: all 0.3s ease;
        width: 100%;
        margin-top: 10px;
    }

        input[type="submit"]:hover {
            background-color: white;
            color: #0078d7;
            border: 2px solid #0078d7;
        }

    .validation-message {
        color: red;
        font-size: 13px;
        text-align: left;
    }

    .msg {
        margin-top: 10px;
        color: #0078d7;
        font-weight: 500;
        text-align: center;
    }
</style>

<h2>Login</h2>

<div class="login-container">
    @using (Html.BeginForm("Login_click", "loginc", FormMethod.Post))
    {
        <div>
            <label>Name:</label>
            @Html.TextBoxFor(m => m.uname, new { placeholder = "Enter your username" })
            <div class="validation-message">@Html.ValidationMessageFor(m => m.uname)</div>
        </div>

        <div>
            <label>Password:</label>
            @Html.PasswordFor(m => m.password, new { placeholder = "Enter your password" })
            <div class="validation-message">@Html.ValidationMessageFor(m => m.password)</div>
        </div>

        <div>
            <input type="submit" value="Login" />
        </div>

        <div class="msg">
            @Html.DisplayFor(m => m.msg)
        </div>
    }
</div>



