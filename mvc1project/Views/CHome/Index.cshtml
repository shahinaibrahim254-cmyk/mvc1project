@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: #ffffff; /* White background */
        color: #0a0a0a; /* Dark text */
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        text-align: center;
        margin-top: 120px;
    }

    h2 {
        color: #0078d7; /* Blue heading */
        font-size: 2rem;
        margin-bottom: 50px;
        letter-spacing: 0.5px;
    }

    ul {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        justify-content: center; /* Center horizontally */
        gap: 30px; /* Space between buttons */
        flex-wrap: wrap; /* Wrap if smaller screens */
    }

    li {
        display: inline;
    }

    a {
        text-decoration: none;
        background-color: #0078d7; /* Blue button */
        color: white;
        padding: 12px 28px;
        border-radius: 6px;
        font-weight: 500;
        transition: all 0.3s ease;
        border: 2px solid transparent;
    }

        a:hover {
            background-color: white;
            color: #0078d7;
            border: 2px solid #0078d7;
            transform: scale(1.05);
        }
</style>

<h2>Welcome to Job Portal</h2>

<ul>
    <li>@Html.ActionLink("Candidate Register", "Insert_userpageload", "candidatereg")</li>
    <li>@Html.ActionLink("Company Register", "Insert_cmpnypageload", "cmpreg")</li>
    <li>@Html.ActionLink("Login", "LoginPageLoad", "loginc")</li>
</ul>
