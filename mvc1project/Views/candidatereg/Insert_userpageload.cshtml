@model mvc1project.Models.Candidateinsert
@{
    ViewBag.Title = "Insert_userpageload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>User Register</h2>
<div>
    @using (Html.BeginForm("Insert_userclick", "candidatereg", FormMethod.Post))
    {
        <div>
            <label>Name</label>

        </div>
        <div>
            @Html.TextBoxFor(m => m.name)
            @Html.ValidationMessageFor(m => m.name)
        </div>

        <div>
            <label>Age</label>

        </div>
        <div>
            @Html.TextBoxFor(m => m.age)
            @Html.ValidationMessageFor(m => m.age)
        </div>
        <div>
            <label>Address</label>
        </div>
        <div>
            @Html.TextAreaFor(m => m.address)
            @Html.ValidationMessageFor(m => m.address)

        </div>
        <div>
            <label>Phone:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.phone)
            @Html.ValidationMessageFor(m => m.phone)
        </div>

        <div>
            <label>Email:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.email)
            @Html.ValidationMessageFor(m => m.email)
        </div>



        <div>
            <label>Gender:</label>
        </div>
        <div>
            Male
            @Html.RadioButtonFor(m => m.gender, "Male")
            Female
            @Html.RadioButtonFor(m => m.gender, "Female")
        </div>

        <div>
            <label>Qualification</label>
        </div>
        <div>
            @foreach (var item in Model.MyFavouriteQual)
            {
                <label>
                    <input type="checkbox" value="@item.value" checked="@item.ischecked" name="selectedQual" id="@item.value" />@Html.Raw(item.text)
                </label>
            }
        </div>

        <div>
            <label>Skills:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.skills)
            @Html.ValidationMessageFor(m => m.skills)
        </div>

        <div>
            <label>Experience:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.exprience)
            @Html.ValidationMessageFor(m => m.exprience)
        </div>

        <div>
            <label>Username:</label>

        </div>
        <div>
            @Html.TextBoxFor(m => m.username)
            @Html.ValidationMessageFor(m => m.username)

        </div>

        <div>
            <label>Password:</label>

        </div>
        <div>
            @Html.PasswordFor(m => m.pass)
            @Html.ValidationMessageFor(m => m.pass)

        </div>
        <div>
            <label>ConfirmPassword:</label>

        </div>
        <div>
            @Html.PasswordFor(m => m.cpassword)
            @Html.ValidationMessageFor(m => m.cpassword)
        </div>

        <div>
            <input type="submit" value="Insert" />
            @Html.DisplayFor(m => m.usermsg)
        </div>



    }
</div>


